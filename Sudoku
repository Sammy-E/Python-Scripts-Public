#The goal is to make a sudoku puzzle

def solve_sudoku(grid):
    best = best_cell(grid)
    possibilities = [i for i in best[2] if i > 0]
    possnumbers = len(possibilities)

    if best[0] == -1 or best[1] == -1:
        # Puzzle solved
        return 1
    elif possnumbers >= 1:
        for possibility in possibilities:
            grid[best[0]][best[1]] = possibility

            # Recursive call to solve_sudoku
            if solve_sudoku(grid):
                return 1  # Solution found, exit the recursion

            # If the current possibility didn't lead to a solution, backtrack
            grid[best[0]][best[1]] = 0

    # No solution found
    return 0
